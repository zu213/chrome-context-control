{
    "name": "Hello Extensions",
    "description": "Base Level Extension",
    "version": "1.0",
    "manifest_version": 3,
    "action": {
      "default_popup": "hello.html",
      "default_icon": "icon.png"
    },
    "permissions": [
      "contextMenus",
      "storage"
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "js": ["contextblocker.js"],
          "all_frames": true,
          "match_about_blank": true
        }
      ]
  }